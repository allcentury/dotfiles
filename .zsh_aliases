# find large files
alias big_files="find / -type f -size +100M | xargs du -sh"

# check folder sizes in home
alias dir_sizes="cd ~ && du -sh *"

# use ctrl + z again instead of having to use fg to get back into vim
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line
  else
    zle push-input
    zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z
