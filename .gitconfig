[init]
  templatedir = ~/.git_template
	defaultBranch = main
[pull]
  ff = only
[push]
	default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit -v
  co = checkout
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  merge-branch = !git checkout master && git merge @{-1}
  pr = !gh pull-request
  st = status
  up = !git fetch origin && git rebase origin/master
  gp = !git push
  gpull = !git pull
  tree = log --graph --abbrev-commit --decorate --date=relative --all
  edit = !vim `git ls-files -m` -p
  log-author = "!f() { git log --date=short --pretty=format:\"%ad:%an:%d:%B\" --branches --since=1.months.ago --author=$1; }; f "
[core]
	excludesfile = /Users/anthonyross/.gitignore_global
  autocrlf = input
  editor = vim
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[user]
	name = Anthony Ross
	email = anthony.s.ross@gmail.com
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
